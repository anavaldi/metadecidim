        {
            "administrator_id": null, 
            "alignment": null, 
            "ancestry": "1719", 
            "as": null, 
            "author": {
                "avatar_image": "https://decidim.barcelona/assets/avatar-866795c99abc33a3160d1f3fa93ada46eb75e54134e777666b9ed16215b26534.png", 
                "erased": false, 
